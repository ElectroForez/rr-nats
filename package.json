{
  "type": "module",
  "scripts": {
    "start": "tsc && npm run all",
    "all": "npm run api & npm run storage",
    "api": "env-cmd node --experimental-specifier-resolution=node lib/api/main.js",
    "storage": "env-cmd node --experimental-specifier-resolution=node lib/storage/main.js",
    "dev:watch": "tsc-watch --onSuccess 'npm run all'"
  },
  "dependencies": {
    "@hapi/hapi": "^20.2.2",
    "@types/glob": "^8.0.0",
    "@types/hapi__hapi": "^20.0.12",
    "@types/node": "^18.7.15",
    "env-cmd": "^10.1.0",
    "glob": "^8.0.3",
    "nats": "^2.7.1"
  },
  "devDependencies": {
    "tsc-watch": "^5.0.3"
  }
}
